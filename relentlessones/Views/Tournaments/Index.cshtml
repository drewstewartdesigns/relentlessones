@model IEnumerable<relentlessones.Models.Tournament>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OpponentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PointsFor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PointsAgainst)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OpponentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsFor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointsAgainst)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TournamentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TournamentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TournamentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
